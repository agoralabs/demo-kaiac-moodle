version: "3.3"
services:
  mariadb:
    image: "bitnami/mariadb:10.1"
    networks:
      - moodle-net
    environment:
      - MARIADB_USER=bn_moodle
      - MARIADB_DATABASE=bitnami_moodle
      - ALLOW_EMPTY_PASSWORD=yes
    volumes:
      - type: bind
        source: /root/maria_data
        target: /bitnami
    ports:
      - "3306:3306"
  moodle:
    image: "webdevops/php-apache:7.3"
    networks:
      - moodle-net
    environment:
      - MOODLE_DBHOST=mariadb
      - MOODLE_DBPORT=3306
      - MOODLE_DBUSER=bn_moodle
      - MOODLE_DBPASS=''
      - MOODLE_DBNAME=bitnami_moodle
    ports:
      - "${TF_VAR_ENV_APP_BE_LOCAL_PORT}:80"
      - "443:443"
    volumes:
      - type: bind
        source: /root/moodle_data
        target: /moodledata/moodledata
      - type: bind
        source: ${TF_VAR_ENV_APP_BE_LOCAL_SOURCE_FOLDER}
        target: /app
    depends_on:
      - mariadb

networks:
  moodle-net:
    driver: bridge

volumes:
  mariadb_data:
    driver: local
  moodle_data:
    driver: local